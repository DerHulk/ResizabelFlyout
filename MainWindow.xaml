<Controls:MetroWindow x:Class="Sandbox.ResizeableFlyout.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      Title="MainWindow"
                      Height="600"
                      Width="800">
    <Grid>
        <Controls:FlyoutsControl >
            <Controls:Flyout Header="Flyout" Position="Right" Width="200" Name="MyFlyout"  >
                <StackPanel Orientation="Horizontal" >
                    <Label Background="Red" Width="5" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseLeftButtonDown="Button_MouseLeftButtonDown" MouseLeftButtonUp="Button_MouseLeftButtonUp" ></Label>
                    <TextBlock>test</TextBlock>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
        <Button Width="100" Height="10" Click="Button_Click">Open Flyout</Button>

    </Grid>
</Controls:MetroWindow>
